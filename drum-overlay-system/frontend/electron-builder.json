{
  "productName": "Drum Visualizer",
  "appId": "com.drumvisualizer.app",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "electron-main.js",
    "preload.js",
    "node_modules/**/*",
    "../backend/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "icon": "icon.icns"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "icon.png"
  }
}